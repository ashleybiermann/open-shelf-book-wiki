<form id="formToUpdateBook" action="/books/<%= current.id %>/update?_overrideMethod=PUT" method="POST">
  <fieldset> 
    <label for="author">Author</label>
    <input type="text" name="author" value="<%=current.author %>">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%=current.title %>">
    <label for="isbn">ISBN</label>
    <input type="text" name="isbn" value="<%=current.isbn %>">
    <label for="image_url">Image URL</label>
    <input type="text" name="image_url" value="<%=current.image_url %>">
    <label for="description">Description</label>
    <input type="text" name="description" value="<%=current.description %>">
    <label for="bookshelf">Bookshelf</label>
    <input type="text" name="bookshelf" value="<%=current.bookshelf %>">
    <button type="submit">Update Info</button>
  </fieldset>
</form>

<form id="formToDeleteBook" action="/books/<%= current.id %>/delete?_overrideMethod=PUT" method="POST"> 
    <button id="deleteBook" type="submit">Remove this book from My Library</button>
</form>
